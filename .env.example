# Application Environment
# Options: development, production, test
NODE_ENV=development

# Server Configuration
PORT=3000

# Rate Limiting Configuration
# Window duration in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
RATE_LIMIT_MAX=100

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000
# Allow credentials in CORS requests
CORS_CREDENTIALS=true

# Helmet Security Headers Configuration
# Set to true for CSP report-only mode (recommended for testing)
HELMET_CSP_REPORT_ONLY=false

# HSTS Configuration
# Max-age in seconds (1 year = 31536000)
HSTS_MAX_AGE=31536000

# Request Body Size Limit
# Maximum allowed request body size
BODY_LIMIT=10kb

# TLS/SSL Configuration (Production only)
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem
